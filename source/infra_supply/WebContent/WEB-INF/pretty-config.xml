<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="default">
        <pattern value="/" />
        <view-id value="/faces/default/index.xhtml" />
    </url-mapping>
    <url-mapping id="home">
        <pattern value="/home" />
        <view-id value="/faces/home/index.xhtml" />
    </url-mapping>

    <url-mapping id="error">
        <pattern value="/error" />
        <view-id value="/error.xhtml" />
    </url-mapping>
    <url-mapping id="permission" >
        <pattern value="/permission" />
        <view-id value="/access-denied.xhtml" />
    </url-mapping>

    <url-mapping id="project" >
        <pattern value="/project" />
        <view-id value="/faces/project/index.xhtml" />
    </url-mapping>
    <url-mapping id="contract" >
        <pattern value="/contract" />
        <view-id value="/faces/contract/index.xhtml" />
    </url-mapping>
    <url-mapping id="bbbg" >
        <pattern value="/bbbg" />
        <view-id value="/faces/bbbg/index.xhtml" />
    </url-mapping>
    <url-mapping id="ha" >
        <pattern value="/ha" />
        <view-id value="/faces/ha/index.xhtml" />
    </url-mapping>
    <url-mapping id="pool" >
        <pattern value="/pool" />
        <view-id value="/faces/pool/index.xhtml" />
    </url-mapping>
    <url-mapping id="unit" >
        <pattern value="/unit" />
        <view-id value="/faces/unit/index.xhtml" />
    </url-mapping>
    <url-mapping id="device" >
        <pattern value="/device" />
        <view-id value="/faces/device/index.xhtml" />
    </url-mapping>


    <url-mapping id="oam">
        <pattern value="/user-management" />
        <view-id value="/faces/oam/index.xhtml" />
    </url-mapping>

    <url-mapping id="oam-usermanage" parentId="oam">
        <pattern value="/user" />
        <view-id value="/faces/oam/usermanage/index.xhtml" />
    </url-mapping>

    <url-mapping id="oam-rolemanage" parentId="oam">
        <pattern value="/role" />
        <view-id value="/faces/oam/rolemanage/index.xhtml" />
    </url-mapping>

    <url-mapping id="rolemanage-addrole" parentId="oam">
        <pattern value="/role/add-role" />
        <view-id value="/faces/oam/rolemanage/addrole.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/faces/login/index.xhtml" />
    </url-mapping>

    <url-mapping id="change-password">
        <pattern value="/change-password" />
        <view-id value="/faces/oam/myprofile/index.xhtml" />
    </url-mapping>

</pretty-config>